{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "inlineSourceMap": true,
    "inlineSources": true,
    "noEmitHelpers": false,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": ["es6", "dom"]
  },
  "include": [
    "./.inline/src/**/*.module.ts",
    "./.inline/src/*.d.ts"
  ],
  "files": [
    ".inline/src/ux-user/user.module.ts"
  ],
  "angularCompilerOptions": {
    "debug": false,
    "genDir": ".aot"
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": { "rewriteTsconfig": false }
}
